<body>
    <div class="card" style="width: 75%;margin: 1% auto;">
        <div class="card-header">
            <h1 class="h3 text-center">Todo List</h1>
        </div>
        <div class="card-body">
            <form>
                <div class="row mb-3">
                    <label for="title" class="col-sm-2 col-form-label">Title</label>
                    <div class="col-sm-10">
                        <input placeholder="insert your title" type="text" class="form-control" id="title" name="title">
                    </div>
                </div>
                <div class="row mb-3">
                    <label class=" col-sm-2 col-form-label">Deadline</label>
                    <div class="col-sm-4">
                        <input type="datetime-local" class="form-control" name="date1">
                    </div>
                    <div class="col-auto" style="margin: auto;">
                        s.d.
                    </div>
                    <div class="col-sm-4">
                        <input type="datetime-local" class="form-control" name="date2">
                    </div>
                </div>
                <div class="row mb-3">
                    <label for="complete" class="col-sm-2 col-form-label">Complete</label>
                    <div class="col-sm-10">
                        <select class="form-select" name="complete" id="complete">
                            <option value="" disabled selected hidden>-select complete-</option>
                            <option value="true">Done</option>
                            <option value="false">Not Yet</option>
                        </select>
                    </div>
                </div>
                <div class="row mb-3">
                    <div class="col-sm-2 "><a class="btn btn-success col-auto"><i class="fa-solid fa-sort"></i> sort by deadline</a></div>
                    <div class="col-sm-10">
                        <a id="reset" class="btn btn-warning col-auto">
                            <i class="fa-solid fa-arrows-rotate"></i></a>
                        <button type="submit" style="margin-right: 0.5em;" class="btn btn-info col-auto">
                            <i class="fa-solid fa-magnifying-glass"></i>
                        </button>
                    </div>
                </div>
            </form>

        </div>
        <div class="card-footer">
            <form>
                <div class="row">
                    <input autocomplete="off" placeholder="title" type="text" class="form-control col" id="addTitle">
                    <button type="submit" class="btn btn-outline-primary col-auto">
                        <i class="fa-solid fa-circle-down"></i>
                    </button>
                </div>
            </form>
        </div>
        <div class="card-body" id="isiTabel" style="padding: 0;">
            <div class="row alert alert-success" style="margin: 0.5em 0;padding:0%;height: 2.8em;">
                <p class="float-start col" style="margin: auto;padding: auto;">asas</p>
                <div class="float-end col-auto" style="margin: auto;">
                    <a style="margin-right: 4px;cursor: pointer;"><i class="fa-solid fa-pen"></i></a>
                    <a style="cursor: pointer;"><i class="fa-solid fa-trash"></i></a>
                </div>
            </div>
            <div class="row alert alert-secondary" style="margin: 0.5em 0;padding:0%;height: 2.8em;">
                <p class="float-start col" style="margin: auto;padding: auto;">asas</p>
                <div class="float-end col-auto" style="margin: auto;">
                    <a style="margin-right: 4px;cursor: pointer;"><i class="fa-solid fa-pen"></i></a>
                    <a style="cursor: pointer;"><i class="fa-solid fa-trash"></i></a>
                </div>
            </div>
        </div>
        <div hidden id="executor">
            <%=executor%>
        </div>
    </div>
