<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>POS - Users</title>

    <!-- Custom fonts for this template-->
    <link href="/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
    <link
        href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i"
        rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.6.0/css/all.min.css">
    <!-- Custom styles for this template-->
    <link href="/stylesheets/sb-admin-2.min.css" rel="stylesheet">

</head>

<body id="page-top">

    <!-- Page Wrapper -->
    <div id="wrapper">

        <%- include('../partials/sidebar') %>

            <!-- Content Wrapper -->
            <div id="content-wrapper" class="d-flex flex-column">

                <!-- Main Content -->
                <div id="content">

                    <%- include('../partials/topbar') %>

                        <!-- Begin Page Content -->
                        <div class="container-fluid">

                            <!-- Page Heading -->
                            <div class="d-sm-flex align-items-center justify-content-between mb-4">
                                <h1 class="h3 mb-0 text-gray-800">Users</h1>

                            </div>


                            <div class="card mb-4">
                                <div class="card-header">
                                    <h6 class="m-0 font-weight-bold text-primary">Form Add</h6>
                                </div>
                                <div class="card-body">
                                    <form class="user" method="post">
                                        <div class="form-group row">
                                            <label class="col-sm-2 col-form-label" for="inputEmail">Email</label>
                                            <input required autocomplete="off" type="email" name="email"
                                                class="form-control col-sm-10" id="inputEmail"
                                                aria-describedby="emailHelp" placeholder="Input Email">
                                        </div>
                                        <div class="form-group row">
                                            <label class="col-sm-2 col-form-label" for="inputName">Name</label>
                                            <input required autocomplete="off" type="text" name="name"
                                                class="form-control col-sm-10" id="inputName" placeholder="Input Name">
                                        </div>
                                        <div class="form-group row">
                                            <label class="col-sm-2 col-form-label" for="inputPassword">Password</label>
                                            <input required autocomplete="off" type="password" name="password"
                                                class="form-control col-sm-10" id="inputPassword"
                                                placeholder="Input Password">
                                        </div>
                                        <div class="form-group row">
                                            <p class="col-sm-2 col-form-label">Role</p>
                                            <div class="col-sm-10 p-0">
                                                <div class="form-check">
                                                    <input class="form-check-input" type="radio" name="role" checked
                                                        id="operatorRadio" value="operator">
                                                    <label class="form-check-label" for="operatorRadio">
                                                        Operator
                                                    </label>
                                                </div>
                                                <div class="form-check">
                                                    <input class="form-check-input" type="radio" name="role"
                                                        id="adminRadio" value="admin">
                                                    <label class="form-check-label" for="adminRadio">
                                                        Admin
                                                    </label>
                                                </div>
                                            </div>
                                        </div>
                                        <button hidden id="submitAdd" type="submit"></button>
                                    </form>
                                </div>
                                <div class="card-footer">
                                    <label for="submitAdd" class="btn btn-success btn-icon-split mb-0">
                                        <span class="icon text-white-50">
                                            <i class="fas fa-database"></i>
                                        </span>
                                        <span class="text">Save</span>
                                    </label>
                                    <a href="/users" class="btn btn-warning btn-icon-split">
                                        <span class="icon text-white-50">
                                            <i class="fas fa-rotate-left"></i>
                                        </span>
                                        <span class="text">back</span>
                                    </a>
                                </div>
                            </div>



                        </div>
                        <!-- /.container-fluid -->

                </div>
                <!-- End of Main Content -->

                <%- include('../partials/footer') %>

            </div>
            <!-- End of Content Wrapper -->

    </div>
    <!-- End of Page Wrapper -->

    <!-- Scroll to Top Button-->
    <a class="scroll-to-top rounded" href="#page-top">
        <i class="fas fa-angle-up"></i>
    </a>

    <!-- Bootstrap core JavaScript-->
    <script src="/vendor/jquery/jquery.min.js"></script>
    <script src="/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

    <!-- Core plugin JavaScript-->
    <script src="/vendor/jquery-easing/jquery.easing.min.js"></script>

    <!-- Custom scripts for all pages-->
    <script src="/javascripts/sb-admin-2.min.js"></script>

</body>

</html>